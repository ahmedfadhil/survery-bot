<table class="table">
	<thead class="thead-light">
		<tr>
			<th>Nome</th>
			<th>Cognome</th>
			<th>Numero Cellulare</th>
			<th>Telegram</th>
		</tr>
	</thead>

	<tbody>
		<% model.each do |patient| %>
		<tr>
			<td><%= patient.name %></td>
			<td><%= patient.surname %></td>
			<td><%= patient.phoneno %></td>
			<td><%= patient.telegram_enabled ? "Si" : "No" %></td>
		</tr>
		<% end %>
	</tbody>
</table>
